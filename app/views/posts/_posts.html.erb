<div class="container">
  <div class="row">
    <div class="col-8">
      <% posts.each do |post| %>
        <div class="post">
          <div class="row border border-3">
    
            <div class="col-2 p-2">
              <div class="avatar">
                <%= user_avatar(post.user, '80') %>
              </div>
            </div>
    
            <div class="col-10 ">
              <div class="">
                <h4><%= link_to post.user.username, user_path(post.user), class: "text-dark p-3" %></h4>
              </div>

              <% if !same_user?(post.user.id) %>
                <% if !followed?(post.user.id) %>

                  <%= form_tag follow_user_path, method: :post do %>
                    <%= hidden_field_tag :follow_id, post.user.id %>
                    <%= submit_tag "Follow", class: "btn btn-primary"%>
                  <% end %>

                <% else %>
                  <%= form_tag unfollow_user_path, method: :post do %>
                    <%= hidden_field_tag :follow_id, post.user.id %>
                    <%= submit_tag "Unfollow", class: "btn btn-secondary"%>
                  <% end %>
                <% end %>

              <% end %>
            </div>
    
          </div>
    
          <div class="row border border-2">
            <div class="">
              <%= link_to image_tag(post.image, :width => 'auto', :height => '400', :class => 'rounded-3 '), post_path(post) %>
            </div>
              <div class="likes m-2">
                <% if !liked?(post) %>
                  <%= form_tag like_post_path, method: :post do %>
                    <%= hidden_field_tag :post_id, post.id %>
                    <%= submit_tag "Like", class: "btn btn-primary"%>
                  <% end %>
                <% else %>
                  <%= form_tag unlike_post_path, method: :post do %>
                    <%= hidden_field_tag :post_id, post.id %>
                    <%= submit_tag "Unlike", class: "btn btn-secondary"%>
                  <% end %>
                <% end %>
                <h5><%= post.likes.count%></h5>
              </div>

            <div class="">
              <%= simple_format post.description %>
            </div>
            <p><%= time_ago_in_words post.created_at %> ago </p>
          </div>
    
        </div> <br>
    
      <% end %>
    </div>
    <div class="col-4 ">
      <div class="row">
        <div class="col-4 p-3">
          <div class="avatar">
              <%= user_avatar(current_user, '80') %>
          </div>
        </div>
        <div class="col-8 p-3">
          <p><%= link_to current_user.username, user_path(current_user), class: "text-dark p-3" %><p>
        </div>
      </div>
    </div>
  </div>
  <%= paginate posts %>
</div>