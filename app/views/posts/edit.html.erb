<%= form_with model: @post do |form| %>
  <div class="form-group m-2">
    <%= form.label :image %><br>
    <%= form.file_field :image %>
    <% @post.errors.full_messages_for(:image).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
  <div class="form-group m-2">
    <%= form.label :description %><br>
    <%= form.text_field :description %>
    <% @post.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.text_field :user_id, value: current_user.id, class:'d-none' %>
    <% @post.errors.full_messages_for(:user_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="m-2">
    <%= form.submit 'Update', class: 'btn btn-primary' %>
  </div>
<% end %>