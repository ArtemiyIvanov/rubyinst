<%= form_with model: @user do |f| %>

    <div class="form-group">
      <%= f.label :avatar %>
      <div class="container p-2"> 
        <%= user_avatar(@user, '200') %>
      </div>
      <%= f.file_field :avatar %>
      <% @user.errors.full_messages_for(:avatar).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

 <div class="form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true %>
    <% @user.errors.full_messages_for(:username).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

  <div class="form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
    <% @user.errors.full_messages_for(:first_name).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
    <% @user.errors.full_messages_for(:last_name).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :gender %><br />
    <%= f.select :gender, ['man', 'woman'], prompt: "Specify gender" %>
    <% @user.errors.full_messages_for(:gender).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div class="containter p-2">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
<div class="containter p-2">
<a class="edit-pass" href="<%= edit_user_registration_path(@user) %>">
              <button class= "btn btn-secondary">Change Password</button>
            </a>